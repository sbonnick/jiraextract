{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "plugins": [
    "mocha",
    "node"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "standard"
  ],
  "rules": {
    "mocha/no-exclusive-tests": 1,
    "node/no-unpublished-require": ["error", {
      "allowModules": ["chai", "chai-as-promised", "sinon", "sinon-test"]
    }]
  },
  "globals": {
  }
}
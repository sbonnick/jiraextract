{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true,
    "amd": true
  },
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "plugins": [
    "mocha",
    "node",
    "editorconfig"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "standard",
    // "plugin:mocha/recommended",
    "plugin:editorconfig/noconflict"
  ],
  "rules": {
    "mocha/no-exclusive-tests": 1,
    "editorconfig/editorconfig": "error"
  },
  "globals": {
  }
}
